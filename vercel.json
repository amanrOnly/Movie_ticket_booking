{
    "version": 2,
    "builds": [
        {
            "src": "movie_book_api/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb", "runtime": "python3"}
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "movie_book_api/wsgi.py"
        }
    ],
    "scripts": {
        "build": "django build --output public"
      }
}